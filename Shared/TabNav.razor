@using Microsoft.AspNetCore.Components

<div class="tab-nav">
  @foreach (var t in Tabs)
  {
    <button class="tab-button @(t == ActiveTab ? "active" : "")"
            @onclick="() => ActiveTabChanged.InvokeAsync(t)">
      <span class="icon">@Icons[t]</span>@t
    </button>
  }
</div>

@code {
  [Parameter] public string ActiveTab { get; set; } = "Focus";
  [Parameter] public EventCallback<string> ActiveTabChanged { get; set; }
  string[] Tabs = new[] { "Focus", "Short Break", "Long Break" };
  Dictionary<string,string> Icons = new() {
    ["Focus"]="⏱", ["Short Break"]="☕", ["Long Break"]="🛌"
  };
}
